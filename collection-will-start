#!/bin/bash

# find `.automated` files and report back the dir
automatedDir=$(ls -A -I node_modules -R | awk '
/:$/&&f{s=$0;f=0}
/:$/&&!f{sub(/:$/,"");s=$0;f=1;next}
NF&&f{ print s"/"$0 }' | pcregrep -o1 '\.\/(.*)\/\.automated\.js')

component=$automatedDir/index.js

echo $(cat $component)

